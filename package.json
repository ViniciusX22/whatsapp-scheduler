{
  "name": "whatsapp-scheduler",
  "version": "0.0.1",
  "description": "API for scheduling messages on WhatsApp",
  "main": "index.ts",
  "scripts": {
    "build": "node build.mjs",
    "build:simple": "esbuild api/index.ts index.ts trigger/scheduled-message.ts --bundle --platform=node --target=node18 --format=cjs --outdir=dist --external:@trigger.dev/sdk --external:axios --external:express --external:dotenv --external:chrono-node --minify --tree-shaking",
    "vercel-build": "npm run build",
    "deploy": "npx trigger.dev deploy && npx vercel --prod",
    "deploy:vercel": "npx vercel --prod",
    "deploy:trigger": "npx trigger.dev deploy",
    "start": "npx vercel dev"
  },
  "author": "Vin√≠cius Xavier",
  "license": "ISC",
  "devDependencies": {
    "@trigger.dev/build": "^3.3.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.8.1",
    "esbuild": "^0.25.8",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@trigger.dev/sdk": "^3.3.17",
    "arktype": "^2.1.20",
    "axios": "^1.11.0",
    "chrono-node": "^2.8.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1"
  }
}
